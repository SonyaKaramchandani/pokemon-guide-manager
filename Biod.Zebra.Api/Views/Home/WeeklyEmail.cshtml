                                                                    </table>
                                                                    <!-- MIDDLE COLUMN -->
                                                                    <table cellpadding="0" cellspacing="0" border="0" width="28%" align="left" class="responsive-table mobile-table-field-row">
                                                                        <tr>
                                                                            <td class="mobile-show-tablecell" style="margin: 0; padding: 13px 10px 10px 0; display: none; width: 0; overflow: hidden; height: 0;">
                                                                                <p style="margin: 0; display: none; width: 0; overflow: hidden; height: 0;" class="mobile-show mobile-table-heading">PROBABILITY OF &ge; 1 INFECTED TRAVELLER*<br /><span style="color: #AE9F7E">(Change from last week)</span></p>
                                                                            </td>
                                                                            <td class="mobile-table-field" style="padding: 20px 10px; text-align: left; vertical-align: top;">
                                                                                @if (eventModel.IsNewEvent)
                                                                                {
                                                                                    <table style="padding: 0; margin: 0;" cellspacing="0" cellpadding="0" border="0">
                                                                                        <tr>
                                                                                            <td height="24"></td>
                                                                                            <td>
                                                                                                <span style="font-size: 11px; font-weight: bold;">&nbsp;</span>
                                                                                            </td>
                                                                                        </tr>
                                                                                    </table>
                                                                                }
                                                                                @if (hasCasesOrDeaths)
                                                                                {
                                                                                    <p class="mobile-hide" style="color: #8E7D55; font-size: 11px; font-weight: bold; margin: 0;">&nbsp;</p>
                                                                                }
                                                                                @if (isPaidUser)
                                                                                {
                                                                                    if (eventModel.AverageProbability < 1)
                                                                                    {
                                                                                        <span style="color: #2E2E2E; font-weight: bold;">Unlikely</span>
                                                                                    }
                                                                                    else
                                                                                    {
                                                                                        <span style="color: #2E2E2E; font-weight: bold;">@eventModel.AverageProbabilityString <span style="color: #8E7D55; font-weight: normal;">@eventModel.AverageProbabilityDelta</span></span>
                                                                                    }
                                                                                }
                                                                                else
                                                                                {
                                                                                    <span style="color: #2E2E2E;">For paid users only</span>
                                                                                }
                                                                            </td>
                                                                        </tr>
                                                                    </table>
                                                                    <!-- RIGHT COLUMN -->
                                                                    <table cellpadding="0" cellspacing="0" border="0" width="28%" align="left" class="responsive-table mobile-table-field-row">
                                                                        <tr>
                                                                            <td class="mobile-show-tablecell" style="margin: 0; padding: 13px 10px 10px 0; display: none; width: 0; overflow: hidden; height: 0;">
                                                                                <p style="display: none; width: 0; overflow: hidden; height: 0;" class="mobile-show mobile-table-heading">EXPECTED # OF INFECTED TRAVELLERS**<br /><span style="color: #AE9F7E">(Change from last week)</span></p>
                                                                            </td>
                                                                            <td class="mobile-table-field" style="padding: 20px 10px; text-align: left; vertical-align: top;">
                                                                                @if (eventModel.IsNewEvent)
                                                                                {
                                                                                    <table style="padding: 0; margin: 0;" cellspacing="0" cellpadding="0" border="0">
                                                                                        <tr>
                                                                                            <td height="24"></td>
                                                                                            <td>
                                                                                                <span style="font-size: 11px; font-weight: bold;">&nbsp;</span>
                                                                                            </td>
                                                                                        </tr>
                                                                                    </table>
                                                                                }
                                                                                @if (hasCasesOrDeaths)
                                                                                {
                                                                                    <p class="mobile-hide" style="color: #8E7D55; font-size: 11px; font-weight: bold; margin: 0;">&nbsp;</p>
                                                                                }
                                                                                @if (isPaidUser)
                                                                                {
                                                                                    if (eventModel.AverageProbability < 1)
                                                                                    {
                                                                                        <span style="color: #2E2E2E; font-weight: bold;">Negligible</span>
                                                                                    }
                                                                                    else
                                                                                    {
                                                                                        <span style="color: #2E2E2E; font-weight: bold; width: 100%;">@eventModel.AverageVolumeString <span style="color: #8E7D55; font-weight: normal;">@eventModel.AverageVolumeDelta</span></span>
                                                                                    }
                                                                                }
                                                                                else
                                                                                {
                                                                                    <span style="color: #2E2E2E;">For paid users only</span>
                                                                                }
                                                                            </td>
                                                                        </tr>
                                                                    </table>
                                                                </td>
                                                            </tr>
                                                        </table>
                                                    </td>
                                                </tr>
                                            }
                                        </table>
                                    </td>
                                </tr>
                                @if (!noResults)
                                {
                                    <tr>
                                        <td style="padding-bottom: 7px;">
                                            <p style="color: #979797; margin: 0; font-size: 11px; line-height: 13px;">* Probability of at least one (1) exported infected travellers in one month</p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding-bottom: 30px;">
                                            <p style="color: #979797; margin: 0; font-size: 11px; line-height: 13px;">** Expected number of exported infected travellers in one month</p>
                                        </td>
                                    </tr>
                                }
                                <tr>
                                    <td class="footer">
                                        @Html.Partial("_EmailFooter", (Model == null || Model.UserId.IsEmpty() ? "" : Model.UserId))
                                    </td>
                                </tr>
                            </table>
                        </td>
                        <td></td>
                    </tr>
                    <!-- Placeholder for row below content -->
                    <tr>
                        <td colspan="3" class="placeholder" style="height: 65px;"></td>
                    </tr>
                </table>
            </center>
            
            @{
                if (Model != null && Convert.ToBoolean(ConfigurationManager.AppSettings.Get("IsLitmusAnalyticsEnabled")) && !isDoNotTrackEnabled)
                {
                    var litmusTrackingId = ConfigurationManager.AppSettings.Get("LitmusTrackingId");
                    var litmusTrackingUrl = "https://" + litmusTrackingId + ".emltrk.com/" + litmusTrackingId;
                    var data = new string[4] {
                        Model.UserId,
                        "",
                        Model.SentDate.ToString("yyyy-MM-ddTHH:mm:ss"),
                        Constants.EmailTypes.WEEKLY_BRIEF_EMAIL.ToString()
                    };
                    var customData = HttpUtility.UrlEncode(string.Join(Constants.LITMUS_DATA_DELIMITER, data));

                    <!-- LITMUS ANALYTICS CODE -->
                    <style data-ignore-inlining>@@media print{ #_t { background-image: url('@litmusTrackingUrl?p&d=@userEmail&t=@customData');}} div.OutlookMessageHeader {background-image:url('@litmusTrackingUrl?f&d=@userEmail&t=@customData')} table.moz-email-headers-table {background-image:url('@litmusTrackingUrl?f&d=@userEmail&t=@customData')} blockquote #_t {background-image:url('@litmusTrackingUrl?f&d=@userEmail&t=@customData')} #MailContainerBody #_t {background-image:url('@litmusTrackingUrl?f&d=@userEmail&t=@customData')}</style><div id="_t"></div>
                    <img src="@litmusTrackingUrl?d=@userEmail&t=@customData" width="1" height="1" border="0" alt="" />
                }

                if (Model != null && Convert.ToBoolean(ConfigurationManager.AppSettings.Get("IsGoogleAnalyticsEnabled")) && !isDoNotTrackEnabled)
                {
                    var queryString = "tid=" + ConfigurationManager.AppSettings.Get("GaTrackingId")
                        + "&t=event&ec=Email&ea=Open"
                        + "&uid=" + Model.UserId
                        + "&cm=" + Constants.GoogleAnalytics.UrlTracking.UTM_MEDIUM_EMAIL
                        + "&cs=" + Constants.GoogleAnalytics.UrlTracking.UTM_SOURCE_EMAIL
                        + "&cn=" + Constants.GoogleAnalytics.UrlTracking.UTM_CAMPAIGN_WEEKLY_BRIEF;
                    <img src="https://www.google-analytics.com/collect?v=1&@queryString" />
                }
            }
        </body>
