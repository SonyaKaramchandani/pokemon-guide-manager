@model Biod.Zebra.Library.Models.Notification.WeeklyViewModel
@using System.Configuration;
@using Biod.Zebra.Library.Infrastructures;
@{
    ViewBag.Title = "Event email page - " + ConfigurationManager.AppSettings.Get("ZebraTitleAndVersion");

    var logoUrl = ConfigurationManager.AppSettings.Get("HostUrl") + "/Content/images/logosmall.png";
    var newIconUrl = ConfigurationManager.AppSettings.Get("HostUrl") + "/Content/images/ic-fiber-new-24px.png";
    var hereIconUrl = ConfigurationManager.AppSettings.Get("HostUrl") + "/Content/images/here.png";

    var isPaidUser = Model.IsPaid;
    var isDoNotTrackEnabled = Convert.ToBoolean(Model.DoNotTrackEnabled);
    var insightsUrl = !isDoNotTrackEnabled
        ?
        @ConfigurationManager.AppSettings.Get("HostUrl")
        + "?userId=" + Model.UserId
        + "&utm_source=" + Constants.GoogleAnalytics.UrlTracking.UTM_SOURCE_EMAIL
        + "&utm_medium=" + Constants.GoogleAnalytics.UrlTracking.UTM_MEDIUM_EMAIL
        + "&utm_campaign=" + Constants.GoogleAnalytics.UrlTracking.UTM_CAMPAIGN_WEEKLY_BRIEF
        :
        @ConfigurationManager.AppSettings.Get("HostUrl")
        + "?userId=" + Model.UserId
        ;

    var settingsUrl = !isDoNotTrackEnabled
        ?
        @ConfigurationManager.AppSettings.Get("HostUrl")
        + "/UserProfile/CustomSettings"
        + "?userId=" + Model.UserId
        + "&utm_source=" + Constants.GoogleAnalytics.UrlTracking.UTM_SOURCE_EMAIL
        + "&utm_medium=" + Constants.GoogleAnalytics.UrlTracking.UTM_MEDIUM_EMAIL
        + "&utm_campaign=" + Constants.GoogleAnalytics.UrlTracking.UTM_CAMPAIGN_WEEKLY_BRIEF
        :
        @ConfigurationManager.AppSettings.Get("HostUrl")
        + "/UserProfile/CustomSettings"
        + "?userId=" + Model.UserId
        ;

    //isEmailConformed is not used yet but we might need it to avoid sending emails to users that are not confirmed their email
    //var isEmailConfirmed = Convert.ToBoolean(Model.EmailConfirmed);

    var noResults = Model.LocalEvents.Count == 0 && Model.NonLocalEvents.Count == 0;

    <!-- Merge Tag -->
    var userEmail = Model.Email;
}


