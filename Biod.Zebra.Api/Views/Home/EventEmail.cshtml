    <body leftmargin="0" marginwidth="0" topmargin="0" marginheight="0" offset="0" style="font-family:'Source Sans Pro', Arial, sans-serif; font-weight: 400; font-size: 20px;" class="fallback-font mobileBodyText">
        <center>
            <table border="0" cellpadding="0" cellspacing="0" height="100%" width="100%" id="bodyTable">
                <tr>
                    <td align="center" valign="top">
                        <!-- BEGIN BODY TABLE -->
                        <table border="0" cellpadding="0" cellspacing="0" width="80%" class="bodyContent">
                            <tr>
                                <td align="center" valign="top" style="padding-top: 5%; padding-bottom: 5%;" class="mobilePadding">
                                    <table border="0" cellpadding="0" cellspacing="0" width="100%" id="main" bgcolor="#FFFFFF" style="background-color: #FFFFFF;">
                                        <tr>
                                            <td align="center" valign="top" style="padding-top: 5%; padding-bottom: 5%; padding-left: 10%; padding-right: 8%;" class="mobileBodyPadding">
                                                <!-- BEGIN MAIN-->
                                                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                    <tr>
                                                        <td align="left">
                                                            <img src="@logoURL" height="23" alt="INSIGHTS | BlueDot" />
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td class="slogan" style="color: #A5A5A5; font-size: 19px; font-weight: 600; padding-bottom: 68px; line-height: 22px;">
                                                            <p style="margin: 0;">Near real-time disease alerts<br />based on what's relevant to you.</p>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td style="padding-top: 35px; padding-bottom: 25px;">
                                                            <!-- START TITLE -->
                                                            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                                @if (Convert.ToBoolean(ConfigurationManager.AppSettings.Get("IsMessagingUnderTesting")))
                                                                {
                                                                    //send the email to the real user
                                                                    <tr>
                                                                        <td style="font-weight: 700; font-size: 18px;" class="newEventText">This email is for testing. It is expected to be delivered to: @userEmail</td>
                                                                    </tr>
                                                                }
                                                                <tr>
                                                                    <td style="font-weight: 700; font-size: 18px;" class="newEventText">New Event &mdash;</td>
                                                                </tr>
                                                                <tr>
                                                                    <!-- START EVENT TITLE -->
                                                                    <td style="font-weight: 900; font-size: 30px; padding-bottom: 16px;" class="eventTitle">@eventTitle</td>
                                                                    <!-- END EVENT TITLE -->
                                                                </tr>
                                                                @{
                                                                    if (Model.EventArticles.Any())
                                                                    {
                                                                        var orderedArticleSources = Model.EventArticles.Select(d => d.DisplayName).ToList();
                                                                        var articleFeeds = String.Join(" / ", orderedArticleSources);
                                                                        <tr>
                                                                            <td style="padding-bottom: 24px;">
                                                                                <span style="line-height:23px"><span style="font-size:18px; color: #828282">With sources from: </span><span style="font-size:20px; color: #AE9F7E;text-transform:uppercase">@articleFeeds</span></span>
                                                                            </td>
                                                                        </tr>
                                                                    }
                                                                    if (Model.AlwaysNotify)
                                                                    {
                                                                        <tr>
                                                                            <td style="border-left: 6px solid #AE9F7E;"><div style="font-size:16px; color: #4F4F4F; margin-left:8px;"><span style="font-weight: bold">You are receiving this notification because you've set @Model.DiseaseName to "Always Notify".</span><br />To edit your disease preferences, visit your <a style="color: #AE9F7E;" href="@settingsUrl">custom settings</a>.</div></td>
                                                                        </tr>
                                                                    }
                                                                }
                                                                @if (isPaidUser)
                                                                {
                                                                    <tr>
                                                                        <td style="padding-top: 16px; padding-bottom: 20px">
                                                                            <!--Warning Table-->
                                                                            <table border="0" cellpadding="0" cellspacing="0" width="100%" style="border:1px solid #E4E4E4">
                                                                                <tr>
                                                                                    <!--Condition: Warning message based on Attribute ID and Mapthreashold-->
                                                                                    @{
                                                                                        if (Model.OutbreakPotentialCategory.Rule == "4") //Sustained
                                                                                        {
                                                                                            //Attribute ID = 3 AND MapThreshold > 0,  OR Attribute ID = 1 :: Sustained
                                                                                            <td valign="middle" style="padding: 8px 22px; font-size: 14px; letter-spacing: 0.02em; font-weight: 700;" bgcolor="#FFF0EF" id="preheader">
                                                                                                <table>
                                                                                                    <tr>
                                                                                                        <td valign="top">
                                                                                                            <span class="warningIMG" style="vertical-align: middle;"><img src="@warningSymbol" alt="warning" title="warning" border="0" style="display:block" width="16" height="16" /></span>
                                                                                                        </td>
                                                                                                        <td style="padding-left:8px;  color: #4F4F4F;">
                                                                                                            <span style="vertical-align: top; font-size: 14px; letter-spacing: 0.02em; font-weight: 700;">LOCAL TRANSMISSION POSSIBLE:</span>
                                                                                                            @if (Model.OutbreakPotentialCategory.AoiCount > 1)
                                                                                                            {
                                                                                                                <span style="vertical-align: top; font-size: 16px; font-weight: 600;">Sustained transmission of @Model.DiseaseName is possible in one or more of your areas of interest.</span>
                                                                                                            }
                                                                                                            else
                                                                                                            {
                                                                                                                <span style="vertical-align: top; font-size: 16px; font-weight: 600;">Sustained transmission of @Model.DiseaseName is possible in  @Model.UserAoiLocationNames.</span>
                                                                                                            }
                                                                                                        </td>
                                                                                                    </tr>
                                                                                                </table>
                                                                                            </td>
                                                                                        }
                                                                                        else if (Model.OutbreakPotentialCategory.Rule == "3") //Sporadic
                                                                                        {
                                                                                            //Attribute ID == 2 :: Sporadic
                                                                                            <td valign="middle" style="padding: 8px 22px; font-size: 14px; letter-spacing: 0.02em; font-weight: 700;" bgcolor="#FDFAF5" id="preheader">
                                                                                                <table>
                                                                                                    <tr>
                                                                                                        <td valign="top">
                                                                                                            <span class="warningIMG" style="vertical-align: middle;"><img src="@warningSymbol" alt="warning" border="0" /></span>
                                                                                                        </td>
                                                                                                        <td style="padding-left:8px;  color: #4F4F4F;">
                                                                                                            <span style="vertical-align: top; font-size: 14px; letter-spacing: 0.02em; font-weight: 700;">LOCAL TRANSMISSION POSSIBLE:</span>
                                                                                                            @if (Model.OutbreakPotentialCategory.AoiCount > 1)
                                                                                                            {
                                                                                                                <span style="vertical-align: top; font-size: 16px; font-weight: 600;">Sporadic transmission of @Model.DiseaseName is possible in one or more of your areas of interest.</span>
                                                                                                            }
                                                                                                            else
                                                                                                            {
                                                                                                                <span style="vertical-align: top; font-size: 16px; font-weight: 600;">Sporadic transmission of @Model.DiseaseName is possible in @Model.UserAoiLocationNames.</span>
                                                                                                            }
                                                                                                        </td>
                                                                                                    </tr>
                                                                                                </table>
                                                                                            </td>
                                                                                        }
                                                                                        else if (Model.OutbreakPotentialCategory.Rule == "2") //Unlikely
                                                                                        {
                                                                                            //Attribute ID = 3 AND MapThreshold = 0,  OR Attribute ID = 4 :: Unlikely
                                                                                            <td valign="middle" style="padding: 8px 22px; font-size: 14px; letter-spacing: 0.02em; font-weight: 700;" bgcolor="#FDFAF5" id="preheader">
                                                                                                <table>
                                                                                                    <tr>
                                                                                                        <td valign="top">
                                                                                                            <span class="warningIMG" style="vertical-align: middle;"><img src="@cautionSymbol" alt="caution" border="0" /></span>
                                                                                                        </td>
                                                                                                        <td valign="middle" style="padding-left:8px;  color: #4F4F4F;">
                                                                                                            <span style="font-size: 13px; letter-spacing: 0.02em; font-weight: 700;">LOCAL TRANSMISSION UNLIKELY:</span>
                                                                                                            @if (Model.OutbreakPotentialCategory.AoiCount > 1)
                                                                                                            {
                                                                                                                <span style="font-size: 14px; font-weight: 600;">@Model.DiseaseName is unlikely to cause a local outbreak in one or more of your areas of interest, but may be seen in returning travellers.</span>
                                                                                                            }
                                                                                                            else
                                                                                                            {
                                                                                                                <span style="font-size: 14px; font-weight: 600;">@Model.DiseaseName is unlikely to cause a local outbreak in @Model.UserAoiLocationNames, but may be seen in returning travellers.</span>
                                                                                                            }

                                                                                                        </td>
                                                                                                    </tr>
                                                                                                </table>
                                                                                            </td>
                                                                                        }
                                                                                        else
                                                                                        {
                                                                                            //Attribute ID == 5 :: Unknown
                                                                                            <td valign="middle" style="padding: 8px 22px; font-size: 14px; letter-spacing: 0.02em; font-weight: 700;" bgcolor="#F6F6F6" id="preheader">
                                                                                                <table>
                                                                                                    <tr>
                                                                                                        <td valign="top">
                                                                                                            <span class="warningIMG" style="vertical-align: middle;"><img src="@questionSymbol" alt="question" border="0" /></span>
                                                                                                        </td>
                                                                                                        <td valign="middle" style="padding-left:8px;  color: #4F4F4F;">
                                                                                                            <span style="font-size: 13px; letter-spacing: 0.02em; font-weight: 700;">LOCAL TRANSMISSIBILITY UNKNOWN:</span>
                                                                                                            <span style="font-size: 14px; font-weight: 600;">Insufficient data about @Model.DiseaseName's potential for local transmission.</span>
                                                                                                        </td>
                                                                                                    </tr>
                                                                                                </table>
                                                                                            </td>
                                                                                        }
                                                                                    }
                                                                                </tr>
                                                                                <!-- Condition: Importation Risk Vs. Local Transmission -->
                                                                                <!-- Importation Risk Local Spread == 1 (Is Local); else = Not Local -->
                                                                                @{
                                                                                    if (Model.EventImportationRisk != null && Model.EventImportationRisk.localSpread == 1)
                                                                                    {
