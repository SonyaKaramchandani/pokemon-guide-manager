@model Biod.Zebra.Library.Models.Notification.EventInfoViewModel
@using System.Configuration;
@using Biod.Zebra.Library.Infrastructures;
@{
    ViewBag.Title = "Event email page - " + ConfigurationManager.AppSettings.Get("ZebraTitleAndVersion");

    var logoURL = ConfigurationManager.AppSettings.Get("HostUrl") + "/Content/images/logosmall.png";
    var questionSymbol = ConfigurationManager.AppSettings.Get("HostUrl") + "/Content/images/question.png";
    var cautionSymbol = ConfigurationManager.AppSettings.Get("HostUrl") + "/Content/images/suitcase.png";
    var warningSymbol = ConfigurationManager.AppSettings.Get("HostUrl") + "/Content/images/warning.png";
    var airplaneLandingLowSymbol = ConfigurationManager.AppSettings.Get("HostUrl") + "/Content/images/airplane-landing-low.png";
    var airplaneLandingMediumSymbol = ConfigurationManager.AppSettings.Get("HostUrl") + "/Content/images/airplane-landing-medium.png";
    var airplaneLandingHighSymbol = ConfigurationManager.AppSettings.Get("HostUrl") + "/Content/images/airplane-landing-high.png";
    var airplaneLandingNegligibleSymbol = ConfigurationManager.AppSettings.Get("HostUrl") + "/Content/images/airplane-landing-negligible.png";
    var hereSymbol = ConfigurationManager.AppSettings.Get("HostUrl") + "/Content/images/here2x.png";


    var eventTitle = Model.Title;
    var eventId = Model.EventId;
    var brief = Model.Brief;
    var modeOfTransmission = Model.TransmittedBy;
    var incubationPeriod = Model.IncubationPeriod;
    var airports = Model.EventAirports;
    var isPaidUser = Model.IsPaidUser;
    var isDoNotTrackEnabled = Convert.ToBoolean(Model.DoNotTrackEnabled);
    var eventUrl = !isDoNotTrackEnabled
        ?
        @ConfigurationManager.AppSettings.Get("HostUrl")
        + "/DashboardPage/Dashboard?eventId=" + eventId
        + "&userId=" + Model.UserId
        + "&utm_source=" + Constants.GoogleAnalytics.UrlTracking.UTM_SOURCE_EMAIL
        + "&utm_medium=" + Constants.GoogleAnalytics.UrlTracking.UTM_MEDIUM_EMAIL
        + "&utm_campaign=" + Constants.GoogleAnalytics.UrlTracking.UTM_CAMPAIGN_EVENT_ALERT
        + "&utm_content=" + eventId
        :
        @ConfigurationManager.AppSettings.Get("HostUrl")
        + "/DashboardPage/Dashboard?eventId=" + eventId
        + "&userId=" + Model.UserId
        ;
    var settingsUrl = !isDoNotTrackEnabled
        ?
        @ConfigurationManager.AppSettings.Get("HostUrl")
        + "/UserProfile/CustomSettings"
        + "?userId=" + Model.UserId
        + "&utm_source=" + Constants.GoogleAnalytics.UrlTracking.UTM_SOURCE_EMAIL
        + "&utm_medium=" + Constants.GoogleAnalytics.UrlTracking.UTM_MEDIUM_EMAIL
        + "&utm_campaign=" + Constants.GoogleAnalytics.UrlTracking.UTM_CAMPAIGN_EVENT_ALERT
        :
        @ConfigurationManager.AppSettings.Get("HostUrl")
        + "/UserProfile/CustomSettings"
        + "?userId=" + Model.UserId
        ;
    <!-- Merge Tag -->
    //isEmailConformed is not used yet but we might need it to avoid sending emails to users that are not confirmed their email
    //var isEmailConfirmed = Convert.ToBoolean(Model.EmailConfirmed);
    var userEmail = Model.Email;
}


