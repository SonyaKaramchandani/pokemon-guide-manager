{
  "ConnectionStrings": {
    "BiodZebraContext": ""
  },
  "AllowedHosts": "*",
  "DbSettings": {
    "EnableSensitiveDataLogging": true,
    "MaxBatchSize": 200,
    "MaxRetryCount": 3,
    "RetryDelayMilliseconds": 500,
    "CommandTimeout": 300
  },
  "JwtAuth": {
    "RequiresHttps": false, //should be true in PROD
    "SecurityKey": "kk%99*377f6d&f£$$£$FdddFF33fssDG^!7"
  },
  "Serilog": {
    "Using": [ "Serilog.Exceptions", "Serilog", "Serilog.Sinks.Console", "Serilog.Sinks.RollingFile" ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "System": "Information",
        "Microsoft": "Fatal",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "RollingFile",
              "Args": {
                "restrictedToMinimumLevel": "Verbose",
                "pathFormat": "C:/temp/Biod.insights/insights-api-{Date}.log",
                "fileSizeLimitBytes": 10000000, //10MB
                "retainedFileCountLimit": 7
              }
            }
          ]
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "restrictedToMinimumLevel": "Verbose"
              }
            }
          ]
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithExceptionDetails" ],
    "Properties": {
      "Environment": "MyLocal"
    }
  }
}
