/*******************************
         Site Overrides
*******************************/

/*-------------------------------- navbar --------------------------*/
.ui.menu {
  font-size: @tinySize;
  border: none;
  margin-bottom: 0;
}

.ui.inverted.menu {
  background: @deepSea90;
}

.ui.inverted.menu .item:before {
  background: none;
  width: 0;
}

//-------------------------------- tabs --------------------------
.ui.menu.tabular {
  border-bottom: none;
  border-right: 1px solid @stone20;

  .item {
    justify-content: center; // NOTE: 1c909c24: the parent of `.item` has `display: flex` from semantic
    flex-grow: 1;
    flex-basis: 0; // CODE: 1c909c24: this is how tabs are equally spaced
    text-align: center;
    padding: 8px;

    .mixin-typography-button;

    letter-spacing: 0.15px;

    color: @deepSea50;
    background: @stone10;
    border-top: 1px solid @stone20;
    border-bottom: 1px solid @stone20;
    border-right: none;
    border-left: none;

    &:not(:first-child) {
      border-left: 0.5px solid @stone20;
    }
    &:before {
      width: 0;
      background: none;
    }
    &:hover {
      background: @deepSea20;
      color: @sea60
    }
    &.active {
      margin-bottom: 0;
      color: @sea80;
      background: @deepSea20;
      border-top: 1px solid @sea100;
      border-bottom: 1px solid @stone20;
    }
  }
}

.ui.segment[class*='bottom attached'] {
  border: none;
  border-right: 1px solid @stone20; // HACK: tabs cover the Panel borders (JIRA: PT-902)
  padding: 0;
}

//-------------------------------- add location menu --------------------------
.ui.vertical.menu .item .menu a.item:hover,
.ui.vertical.menu .item .menu .link.item:hover {
  color: @itemTextColor;
  background: @deepSea20;
}

.ui.menu .ui.dropdown .menu > .item:hover {
  font-weight: 600;
}
