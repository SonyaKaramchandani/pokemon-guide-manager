/*-------------------
      Sizes
--------------------*/

/* 
Exact pixel values @ 14px em; these are placeholders for now 
*/

@mini       : 0.8571rem;     */ ~12px
@tiny       : 1rem;          */ ~14px
@small      : 1.1428rem;     */ ~16px
@medium     : 1.2857rem;     */ ~18px
@large      : 1.4285rem;     */ ~20px
@big        : 1.7142rem;     */ ~24px
@huge       : 2.2857rem;     */ ~32px
@massive    : 3.4285rem      */ ~48px

/*-------------------
   Breakpoints
--------------------*/

@mobileBreakpoint            : 320px;
@tabletBreakpoint            : 768px;
@computerBreakpoint          : 992px;
@largeMonitorBreakpoint      : 1400px;
@widescreenMonitorBreakpoint : 1920px;

