/*******************************
     User Global Variables
*******************************/

/*-------------------
     Fonts
--------------------*/

@headerFont        : 'Source Sans Pro', 'Helvetica Neue', Arial, Helvetica, sans-serif;
@pageFont          : 'Source Sans Pro', 'Helvetica Neue', Arial, Helvetica, sans-serif;
@fontSmoothing     : antialiased;

@importGoogleFonts : true;
@googleFontName    : 'Source Sans Pro';
@googleFontSizes   : '200,300,400,600,700,900,200italic,300italic,400italic,600italic,700italic,900italic';
@googleFontFamily  : '@{googleFontName}:@{googleFontSizes}';

/*-------------------
    Base Sizes
--------------------*/

/*
@emSize      : 14px;
@fontSize    : 14px;
*/

/*
 * Source Sans Pro font weights
 * 200: extra-light
 * 300: light
 * 400: regular
 * 600: semi-bold
 * 700: bold
 * 900: black
 */


