<script>
    function initEventDetailMap() {
        require(["esri/map"], function (Map) {
                //=====Map initialization START=====
                Dashboard.Prop.eventDetailMap = new Map("event-detail-map", {
                    basemap: "gray-vector",
                    center: [-46.807, 32.553],
                    zoom: 1,
                    minZoom: 1,
                    isScrollWheel: false,
                    //showInfoWindowOnClick: false,
                    showLabels: true //very important that this must be set to true!
                });

            }
        );
    }
    Dashboard.Func.initEventDetailMap = initEventDetailMap;
</script>