@using System.Configuration;
@{
    ViewBag.Title = "Create user page - " + ConfigurationManager.AppSettings.Get("ZebraTitleAndVersion");

    SelectListItem[] roles = ViewBag?.Roles ?? new SelectListItem[0];
}
<style>
    .fill-parent {
        height: 100%;
        box-sizing: border-box;
    }

    #useradmin-create {
        padding: 60px 15px 15px;
    }
    
    #useradmin-create .form {
        max-width: 700px;
        margin-top: 1rem;
    }
    
    #useradmin-create label {
        font-family: "Inter UI", sans-serif;
    }
    
    #useradmin-create label.required-label:after {
        content: '*';
        color: red;
    }
    
    #useradmin-create input:not([type=checkbox]),
    #useradmin-create select {
        width: 100%;
        border: 1px solid #ced4da;
        border-radius: 0.25rem;
        padding: 0.75rem;
        font-size: 1rem;
        font-family: "Inter UI", sans-serif;
    }
    
    #useradmin-create input::placeholder {
        color: #c4c4c4;
        opacity: 1;
    }
    
    #useradmin-create #spinner {
        position: absolute;
        height: 2rem;
        top: 1.7rem;
        right: 0.5rem;
        vertical-align: middle;
        display: none;
    }
</style>

<div id="useradmin-create" class="fill-parent admin-settings">
    <h2>Create new user</h2>
    <form class="form">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="firstname" class="required-label">First Name</label>
                <input id="firstname" name="firstname" type="text" placeholder="e.g. Samantha" required/>
            </div>
            <div class="form-group col-md-6">
                <label for="lastname" class="required-label">Last Name</label>
                <input id="lastname" name="lastname" type="text" placeholder="e.g. Young" required/>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="role" class="required-label">Role</label>
                <select id="role" name="role" type="text" required>
                    <option value="" disabled selected hidden>Choose below</option>
                    @foreach (var role in roles)
                    {
                        <option value="@role.Value">@role.Text</option>
                    }
                </select>
            </div>
            <div class="form-group col-md-6">
                <label for="organization">Organization</label>
                <input id="organization" name="organization" type="text" placeholder="e.g. Mount Sinai"/>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label for="location" class="required-label">Location</label>
                <input id="location" name="location" type="text" placeholder="e.g. Toronto, Ontario, Canada" required/>
                <img id="spinner" alt="Spinner" src="@Url.Content("~/Content/images/spinner.gif")" />
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label for="phonenumber">Phone</label>
                <input id="phonenumber" name="phonenumber" type="text"/>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label for="email" class="required-label">Email</label>
                <input id="email" name="phonenumber" type="email" placeholder="e.g. email@example.com"/>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <input id="passwordreset" name="passwordreset" type="checkbox" checked/>
                <label for="passwordreset">Force Password Reset</label>
                <div style="font-style: italic">(If checked, the user will be forced to reset their password when confirming their account)</div>
            </div>
        </div>
        <div class="form-row password-section" style="display: none">
            <div class="form-group col-md-12">
                <label for="password" class="required-label">Password</label>
                <input id="password" name="password" type="password"/>
            </div>
        </div>
        <div class="form-row password-section" style="display: none">
            <div class="form-group col-md-12">
                <label for="confirmpassword" class="required-label">Password</label>
                <input id="confirmpassword" name="confirmpassword" type="password" placeholder="Confirm Password"/>
            </div>
        </div>
        <span id="errormessage" style="color: red; font-weight: bold;">&nbsp;</span>
        <input type="submit" id="submit" value="Submit"/>
    </form>
</div>

<script src="~/Areas/DashboardPage/Content/scripts/user/create.js"></script>