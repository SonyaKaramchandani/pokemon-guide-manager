                                                            <table cellpadding="0" cellspacing="0" border="0" width="33%" align="left" class="responsive-table">
                                                                <tr>
                                                                    <td style="padding: 20px;" valign="top" align="center">
                                                                        <img style="width: 55px; height: 55px;" src="@ConfigurationManager.AppSettings.Get("HostUrl")/Content/images/network-pin.png" width="55" height="55" />
