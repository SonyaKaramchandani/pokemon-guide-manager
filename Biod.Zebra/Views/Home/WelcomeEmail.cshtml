                                                </tr>
                                            }
                                            @if (Model.LocalEvents.Count > 0)
                                            {
                                                <!-- Proximal Table -->
                                                <tr>
                                                    <td align="center" style="padding-top: 20px;">
                                                        <img src="@ConfigurationManager.AppSettings.Get("HostUrl")/Content/images/here.png" width="20" height="20" />
                                                        <p style="margin-top: 10px;">Top disease events <span style="font-weight: 600;">happening right now in or close to</span> your location:</p>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td style="padding-bottom: 10px;">
                                                        <table style="padding: 0; margin: 0;" cellspacing="0" cellpadding="0" border="0" width="100%">
                                                            <tr>
                                                                <td class="local-heading-row" valign="top" width="100%" style="border-top: 1px solid #E3E3E3; border-bottom: 1px solid #E3E3E3; font-weight: 600; color: #979797; font-size: 11px; line-height: 13px; padding: 13px 10px 13px 0;">EVENT</td>
                                                            </tr>
                                                            <!-- Rows added here -->
                                                            @foreach (var localEvent in Model.LocalEvents)
                                                            {
                                                                var eventUrl = !isDoNotTrackEnabled
                                                                    ?
                                                                    @ConfigurationManager.AppSettings.Get("InsightsAppDashboardUrl")
                                                                    + "/DashboardPage/Dashboard?eventId=" + localEvent.EventId
                                                                    + "&userId=" + Model.UserId
                                                                    + "&utm_source=" + Constants.GoogleAnalytics.UrlTracking.UTM_SOURCE_EMAIL
                                                                    + "&utm_medium=" + Constants.GoogleAnalytics.UrlTracking.UTM_MEDIUM_EMAIL
                                                                    + "&utm_campaign=" + Constants.GoogleAnalytics.UrlTracking.UTM_CAMPAIGN_WELCOME
                                                                    + "&utm_content=" + localEvent.EventId
                                                                    :
                                                                    @ConfigurationManager.AppSettings.Get("InsightsAppDashboardUrl")
                                                                    + "/DashboardPage/Dashboard?eventId=" + localEvent.EventId
                                                                    + "&userId=" + Model.UserId
                                                                    ;
                                                                <tr>
                                                                    <td style="border-bottom: 1px solid #E3E3E3; padding: 13px 10px 13px 0;" valign="top" align="left">
                                                                        <a style="color: #2E2E2E; font-size: 14px; line-height: 18px; font-weight: 600; text-decoration: underline;" href="@eventUrl">@localEvent.EventTitle</a>
                                                                    </td>
                                                                </tr>
                                                            }
                                                        </table>
                                                    </td>
                                                </tr>
                                                if (Model.AdditionalLocalCount > 0)
                                                {
                                                    <tr>
                                                        <td style="padding-bottom: 20px;">
                                                            <a style="color: #2E2E2E; font-size: 14px; line-height: 18px; font-weight: 600; text-decoration: underline;" href="@insightsUrl">And @Model.AdditionalLocalCount more disease event@(Model.AdditionalLocalCount > 1 ? "s" : "") in Insights &rarr;</a>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        </table>
                                    </td>
                                </tr>

                            }
                            <tr>
                                <td class="footer" style="padding-top: 10px;">
                                    @Html.Partial("_EmailFooter", (Model == null || Model.Email.IsEmpty() ? "" : Model.Email))
                                </td>
                            </tr>
                        </table>
                    </td>
                    <td></td>
                </tr>
                <!-- Placeholder for row below content -->
                <tr>
                    <td colspan="3" class="placeholder" style="height: 65px;"></td>
                </tr>
            </table>
        </center>

        @{
            if (Model != null && Convert.ToBoolean(ConfigurationManager.AppSettings.Get("IsLitmusAnalyticsEnabled")) && !isDoNotTrackEnabled)
            {
                var litmusTrackingId = ConfigurationManager.AppSettings.Get("LitmusTrackingId");
                var litmusTrackingUrl = "https://" + litmusTrackingId + ".emltrk.com/" + litmusTrackingId;
                var data = new string[4] {
                    Model.UserId,
                    "",
                    Model.SentDate.ToString("yyyy-MM-ddTHH:mm:ss"),
                    Constants.EmailTypes.WELCOME_EMAIL.ToString()
                };
                var customData = HttpUtility.UrlEncode(string.Join(Constants.LITMUS_DATA_DELIMITER, data));
                var userEmail = Model.Email;

                <!-- LITMUS ANALYTICS CODE -->
                <style data-ignore-inlining=data-ignore-inlining>@@media print{ #_t { background-image: url('@litmusTrackingUrl?p&d=@userEmail&t=@customData');}} div.OutlookMessageHeader {background-image:url('@litmusTrackingUrl?f&d=@userEmail&t=@customData')} table.moz-email-headers-table {background-image:url('@litmusTrackingUrl?f&d=@userEmail&t=@customData')} blockquote #_t {background-image:url('@litmusTrackingUrl?f&d=@userEmail&t=@customData')} #MailContainerBody #_t {background-image:url('@litmusTrackingUrl?f&d=@userEmail&t=@customData')}</style><div id="_t"></div>
                <img src="@litmusTrackingUrl?d=@userEmail&t=@customData" width="1" height="1" border="0" alt="" />
            }

            if (Model != null && Convert.ToBoolean(ConfigurationManager.AppSettings.Get("IsGoogleAnalyticsEnabled")) && !isDoNotTrackEnabled)
            {
                var queryString = "tid=" + ConfigurationManager.AppSettings.Get("GaTrackingId")
                    + "&t=event&ec=Email&ea=Open"
                    + "&uid=" + Model.UserId
                    + "&cm=" + Constants.GoogleAnalytics.UrlTracking.UTM_MEDIUM_EMAIL
                    + "&cs=" + Constants.GoogleAnalytics.UrlTracking.UTM_SOURCE_EMAIL
                    + "&cn=" + Constants.GoogleAnalytics.UrlTracking.UTM_CAMPAIGN_WELCOME;
                <img src="https://www.google-analytics.com/collect?v=1&@queryString" />
            }
        }
    </body>
</html>
