@model Biod.Zebra.Library.Models.Notification.Email.WelcomeEmailViewModel
@using System.Configuration;
@using Biod.Zebra.Library.Infrastructures;
@{
    ViewBag.Title = "Welcome Email page - " + ConfigurationManager.AppSettings.Get("ZebraTitleAndVersion");
    var isDoNotTrackEnabled = Convert.ToBoolean(Model.DoNotTrackEnabled);
    var insightsUrl = !isDoNotTrackEnabled
        ?
        @ConfigurationManager.AppSettings.Get("InsightsAppDashboardUrl")
        + "?user_id=" + Model.UserId
        + "&utm_source=" + @Constants.GoogleAnalytics.UrlTracking.UTM_SOURCE_EMAIL
        + "&utm_medium=" + @Constants.GoogleAnalytics.UrlTracking.UTM_MEDIUM_EMAIL
        + "&utm_campaign=" + @Constants.GoogleAnalytics.UrlTracking.UTM_CAMPAIGN_WELCOME
        :
        @ConfigurationManager.AppSettings.Get("InsightsAppDashboardUrl")
        + "?user_id=" + Model.UserId
        ;

    var hasEvents = Model.LocalEvents.Count > 0 || Model.NonLocalEvents.Count > 0;
    //isEmailConformed is not used yet but we might need it to avoid sending emails to users that are not confirmed their email
    //var isEmailConformed = Convert.ToBoolean(Model.EmailConfirmed);
}

<content>
