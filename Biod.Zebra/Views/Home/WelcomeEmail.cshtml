                                                            <table class="mobile-hide responsive-table" cellpadding="20" cellspacing="0" border="0" width="18%" align="left"><tr><td valign="top" align="center">&nbsp;</td></tr></table>
                                                            <!-- LEFT COLUMN -->
                                                            <table cellpadding="0" cellspacing="0" border="0" width="32%" align="left" class="responsive-table">
                                                                <tr>
                                                                    <td style="padding: 20px;" valign="top" align="center">
                                                                        <img style="width: 55px; height: 55px;" src="@ConfigurationManager.AppSettings.Get("HostUrl")/Content/images/plane.png" width="55" height="55" />
