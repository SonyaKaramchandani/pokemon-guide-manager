@using System.Configuration;
@{
    ViewBag.Title = "Your email has been confirmed - " + ConfigurationManager.AppSettings.Get("ZebraTitleAndVersion");
}

<!DOCTYPE html>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<head>
    <title>@ViewBag.Title</title>
</head>

<body class="bg-white">
    <div class="split left">
        <div class="container">
            <div class="row">
                <div class="mx-auto col-md-9 message-margin">
                    @if (!Request.IsAuthenticated)
                    {
                        <div class="row">
                            <div class="col">@Html.Partial("_Logo")</div>
                        </div>
                    }
                    <div class="login-message">
                        <h4>Email Confirmed</h4>
                        <h3>Thank you for confirming your email.</h3>
                    </div>
                    <div class="landing-form">
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            @Html.ActionLink("Sign in", "Login", "Account", routeValues: null, htmlAttributes: new { @class = "btn btn-bd-primary submit-button" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="split right"></div>
</body>