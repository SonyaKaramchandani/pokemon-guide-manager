{
  "ConnectionStrings": {
    "BiodZebraContext": "Server=db1dev.ad.bluedot.global;Database=BiodZebra;user id=XXX;password=YYY;ConnectRetryCount=0" // set the user/password
  },
  "DbSettings": {
    "EnableSensitiveDataLogging": true,
    "MaxBatchSize": 200,
    "MaxRetryCount": 3,
    "RetryDelayMilliseconds": 500,
    "CommandTimeout": 300
  },
  "NotificationSettings": {
    "InsightsAppBaseUrl": "http://localhost:3000",
    "ZebraAppBaseUrl": "http://localhost/Biod.Zebra",
    "IsAnalyticsEnabled": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "AppSettings": {
    "CompanyName": "BlueDot Inc.",
    "SupportEmail": "support@bluedot.global",
    "CompanyUrl": "https://bluedot.global/",
    "EmailRecipientListUponError": "support@bluedot.global,xxx@bluedot.global",
    "EmailSubjectUponError": "Error occurred in Biod.Insights.Notification.Api on Web1Dev.",
    "ConnectionString": "Server=***;Database=***;user id=bd;password=***;ConnectRetryCount=0"
  },
  "Serilog": {
    "Using": [ "Serilog.Exceptions", "Serilog", "Serilog.Sinks.Console", "Serilog.Sinks.RollingFile", "Serilog.Sinks.MSSqlServer", "Serilog.Sinks.ApplicationInsights" ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "System": "Information",
        "Microsoft": "Fatal",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "RollingFile",
              "Args": {
                "restrictedToMinimumLevel": "Verbose",
                "pathFormat": "C:/temp/Biod.insights/notifications-api-{Date}.log",
                "fileSizeLimitBytes": 10000000, //10MB
                "retainedFileCountLimit": 7
              }
            }
          ]
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "restrictedToMinimumLevel": "Verbose"
              }
            }
          ]
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "MSSqlServer",
              "Args": {
                "ConnectionString": "Server=db1dev.ad.bluedot.global;Database=BiodZebra;user id=XXX;password=YYY;ConnectRetryCount=0", // set the user/password
                "tableName": "Log",
                "autoCreateSqlTable": true,
                "restrictedToMinimumLevel": "Verbose",
                "columnOptionsSection": {
                  "customColumns": [
                    {
                      "ColumnName": "ApplicationName",
                      "DataType": "nvarchar",
                      "AllowNull": true
                    },
                    {
                      "ColumnName": "Environment",
                      "DataType": "nvarchar",
                      "AllowNull": true
                    }
                  ]
                }
              }
            }
          ]
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithExceptionDetails" ],
    "Properties": {
      "Environment": "NotificationApi"
    }
  }
}
